@using WebProjectSkillsAssessment.Domain.Entities
@model Transaction
<div class="col-lg-9 col-12 mx-auto">
    <div class="card card-body mt-4">
        <h4 class="mb-0">Transaction Details</h4>
        <hr class="horizontal dark my-2">
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Amount</strong></div>
                <div class="col-9"><text>R</text>@Model.Amount.ToString("0.00")</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Capture Date</strong></div>
                <div class="col-9">@Model.CaptureDate</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Transaction Date</strong></div>
                <div class="col-9">@Model.TransactionDate</div>
            </div>
        </div>
         <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Description</strong></div>
                <div class="col-9">@Model.Description</div>
            </div>
        </div>
    </div>
</div>