@using WebProjectSkillsAssessment.Domain.Entities
@model Account
<style>
    .top-right {
        top: 3%;
        right: 3%;
    }
</style>
<br />
<div class="card card-body mt-12">
     <div class="card card-body mt-4">

        <div class="position-absolute top-right">

            <a asp-controller="/Transactions" asp-action="AddTransactions" asp-route-Code="@Model.Code" class="btn btn-primary">Add Transations</a>
        </div>
        <h4 class="mb-0">Account Details</h4>
        <hr class="horizontal dark my-2">
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Code</strong></div>
                <div class="col-9">@Model.Code</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Account Number</strong></div>
                <div class="col-9">@Model.AccountNumber</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-3"><strong>Outstanding Amount</strong></div>
                <div class="col-9"><text>R</text>@Model.OutstandingAmount.ToString("0.00")</div>
            </div>
        </div>
        @if(Model.OutstandingAmount  > 0)
        {
            <div class="d-flex justify-content-start mt-4">
                <div class="d-flex justify-content-start mt-4">
                    <a asp-controller="/Transactions" asp-action="GetTransactionsListByIdOrCode" asp-route-AccountCode="@Model.Code" class="btn btn-primary">View Transactions</a>
                </div>
            </div>
        }
    </div>


    <div class="card card-body mt-4">
        <div class="row w-100">
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
