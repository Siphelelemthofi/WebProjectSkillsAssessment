@using WebProjectSkillsAssessment.Domain.Entities
@model List<Account>
<style>
/*    .top-right {
        top: -3%;
        right:-3%;
    }*/
</style>
<div class="jumbotron jumbotron-fluid">
    <p>
        <div class="form-group row">
            <div class="col-md-12">
                <div class="input-group">
                   
                        <p>
                            <div class="position-absolute top-right">
                               @foreach (var item in Model)
                {
                                <div class="position-absolute top-right">
                                    <a asp-controller="/Accounts" asp-action="AddNewPersonAccount" asp-route-Code="@item.Code" class="btn btn-primary">add Accounts</a>

                            </div>
                }
                            </div>
                        </p>
                     
                </div>
            </div>
        </div>
        <table class=table>
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayName("Code")</th>
                    <th>@Html.DisplayName("AccountNumber")</th>
                    <th>@Html.DisplayName("Action")</th>
                </tr>
            </thead>
            <tbody>
                 
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem =>item.Code)</td>
                        <td>@Html.DisplayFor(modelItem =>item.AccountNumber)</td>
                        <td>
                            <a asp-controller="/Accounts" asp-action="GetAccountDetailsByAccountNumber" asp-route-AccountNumber="@item.AccountNumber" class="btn bg-gradient-primary mt-2 me-2">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </p>
</div>